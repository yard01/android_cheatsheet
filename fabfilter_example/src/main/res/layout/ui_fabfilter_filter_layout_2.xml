<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/ui_fabfilter_filter_layout_padding"
    tools:background="@color/ui_fabfilter_colorPrimaryDark"
    tools:layout_height="@dimen/ui_fabfilter_sheet_peek_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ui_fabfilter_filter_pill_1"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:tint="@color/ui_fabfilter_filter_pill_color"
            app:srcCompat="@drawable/ui_fabfilter_ic_pill" />

        <ImageView
            android:id="@+id/ui_fabfilter_filter_pill_2"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:tint="@color/ui_fabfilter_filter_pill_color"
            app:srcCompat="@drawable/ui_fabfilter_ic_pill" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ui_fabfilter_filter_pill_3"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:tint="@color/ui_fabfilter_filter_pill_color"
            app:srcCompat="@drawable/ui_fabfilter_ic_pill" />

        <ImageView
            android:id="@+id/ui_fabfilter_filter_pill_4"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:tint="@color/ui_fabfilter_filter_pill_color"
            app:srcCompat="@drawable/ui_fabfilter_ic_pill" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ui_fabfilter_filter_pill_5"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:tint="@color/ui_fabfilter_filter_pill_color"
            app:srcCompat="@drawable/ui_fabfilter_ic_pill" />
    </LinearLayout>
</LinearLayout>