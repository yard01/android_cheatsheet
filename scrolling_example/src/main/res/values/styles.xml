<?xml version="1.0" ?><resources>

    <!-- Base application theme. -->
    <style name="UI_SCROLLING_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/UI_SCROLLING_colorPrimary</item>
        <item name="colorPrimaryDark">@color/UI_SCROLLING_colorPrimaryDark</item>
        <item name="colorAccent">@color/UI_SCROLLING_colorAccent</item>
    </style>

    <style name="UI_SCROLLING_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="UI_SCROLLING_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="UI_SCROLLING_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>